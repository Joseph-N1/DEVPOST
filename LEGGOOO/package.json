{
  "name": "leggooo",
  "version": "0.1.0",
  "private": true,
  "description": "Real-Time Collaborative Coding IDE with AI Assistant",
  "author": "LEGGOOO Team",
  "license": "MIT",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm --filter frontend build && pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "test": "pnpm --filter \"*\" test",
    "test:e2e": "pnpm --filter frontend test:e2e",
    "test:a11y": "pnpm --filter frontend test:a11y",
    "lint": "pnpm --filter \"*\" lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "pnpm --filter \"*\" typecheck",
    "clean": "rimraf node_modules frontend/node_modules backend/node_modules frontend/dist backend/dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.6"
}
