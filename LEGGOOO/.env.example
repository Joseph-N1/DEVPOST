# ============================================
# LEGGOOO Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
# ============================================

# ─────────────────────────────────────────────
# SUPABASE (Auth + Database + Storage)
# ─────────────────────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ─────────────────────────────────────────────
# Y-WEBSOCKET (Real-time collaboration)
# ─────────────────────────────────────────────
YWS_URL=wss://your-yws-server.railway.app
YWS_PORT=1234

# ─────────────────────────────────────────────
# BACKEND API
# ─────────────────────────────────────────────
API_URL=http://localhost:3000
API_PORT=3000
NODE_ENV=development

# ─────────────────────────────────────────────
# AI SERVICE
# ─────────────────────────────────────────────
AI_BASE_URL=http://localhost:8000
AI_MODEL=gpt4all-lora-unfiltered-quantized

# Optional: OpenAI fallback (cloud)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini

# ─────────────────────────────────────────────
# GITHUB OAUTH (for auth + repo access)
# ─────────────────────────────────────────────
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ─────────────────────────────────────────────
# GOOGLE OAUTH (optional)
# ─────────────────────────────────────────────
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ─────────────────────────────────────────────
# ENCRYPTION (for GitHub tokens at rest)
# ─────────────────────────────────────────────
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-byte-hex-key-here

# ─────────────────────────────────────────────
# JWT SECRETS
# ─────────────────────────────────────────────
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your-access-token-secret-here
JWT_REFRESH_SECRET=your-refresh-token-secret-here

# ─────────────────────────────────────────────
# FRONTEND (Vite)
# ─────────────────────────────────────────────
VITE_SUPABASE_URL=${SUPABASE_URL}
VITE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
VITE_API_URL=${API_URL}
VITE_YWS_URL=${YWS_URL}

# ─────────────────────────────────────────────
# DEPLOYMENT (Netlify / Railway)
# ─────────────────────────────────────────────
NETLIFY_AUTH_TOKEN=your-netlify-auth-token
NETLIFY_SITE_ID=your-netlify-site-id
RAILWAY_TOKEN=your-railway-token

# ─────────────────────────────────────────────
# REDIS (optional, for rate limiting)
# ─────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ─────────────────────────────────────────────
# LOGGING
# ─────────────────────────────────────────────
LOG_LEVEL=debug
